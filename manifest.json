{
  "manifest_version": 3,
  "name": "summarize-gpt",
  "description": "Extract the key points of any web page in ew seconds",
  "version": "1.0.1",
  "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage"
  ],
  "action": {
      "default_popup": "src/html/extension.html"
  },
  "icons": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
  },
  "options_ui": {
      "page": "src/html/options.html"
  },
  "background": {
      "service_worker": "src/js/background.js"
  }
}